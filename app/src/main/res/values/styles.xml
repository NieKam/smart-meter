<resources>

    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="android:windowBackground">@color/background_color</item>
        <item name="colorPrimary">@color/foreground_color</item>
        <item name="colorPrimaryDark">@color/background_color</item>
        <item name="colorAccent">@color/md_grey_500</item>
        <item name="md_corner_radius">@dimen/radius</item>
        <item name="md_color_button_text">@color/md_grey_400</item>
        <item name="md_ripple_color">@color/md_grey_400</item>
    </style>

    <style name="textBase">
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="textTitle" parent="textBase">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/md_grey_400</item>
    </style>

    <style name="fundsText">
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="days" parent="textBase">
        <item name="android:textColor">@color/md_grey_400</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="days.small">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="shadowText">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/md_grey_600</item>
    </style>

    <style name="date" parent="textBase">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="darkTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/selection_color</item>
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="boxStrokeColor">@color/selection_color</item>
    </style>

    <style name="warning">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/md_red_300</item>
    </style>

    <style name="small_warning">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/md_red_300</item>
    </style>

    <style name="history" parent="textBase">
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">@dimen/margin_default</item>
        <item name="android:paddingBottom">@dimen/margin_default</item>
    </style>

    <style name="history.date">
        <item name="android:textColor">@color/md_grey_400</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="shadowTextSmall" parent="shadowText">
        <item name="android:textSize">15sp</item>
    </style>


</resources>
